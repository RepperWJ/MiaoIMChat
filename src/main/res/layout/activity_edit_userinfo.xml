<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        >
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head2"
            />
        <ImageView
            android:id="@+id/img_user_icon_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/jy_icon_resume"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:gravity="center"
        android:hint="请输入您的昵称"
        android:textSize="16sp"
        android:textColor="@color/greenn"
        android:textColorHint="@color/gray"
        android:background="@drawable/edit_username"
        />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="开始体验"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:enabled="false"
        android:background="@drawable/btn_enable_green"
        />

</LinearLayout>